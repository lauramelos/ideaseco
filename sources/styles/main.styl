@import 'node_modules/nib'
@import 'deps/clean.styl'

/* component styles */
@import 'javascript/build/build.css'

/* absolut url srcs */
$host = "http://------definir.un.host-----/"

/* wrap dimmension */
$wrap_width = 960px

/* Layout */
$mainbar_height = 72px
$nav_hight = 120px

/* MOBILE Layout */
$mob_mainbar_height = 80px
$mob_nav_hight = 75px
$body_top = $mob_mainbar_height + $mob_nav_hight;
$body_content_port = 480 - $body_top

/* commons */
@import 'commons/colors.styl'
@import 'commons/fonts.styl'
@import 'commons/buttons.styl'

/* blocks */
@import 'footer.styl'
//@import 'header.styl'

*
  box-sizing: border-box
  *behavior: url( $host + 'css/boxsizing.htc')
  outline: none

body
  font-family: $main-font
  background-color:$grey-dark 
  color: white
  overflow: hidden
  a
    color: $grey-light
    text-decoration: none
  h1
    color: #fff
    font-size: 20px

  div.back
    img
      display: block
      height: auto
      max-height: 100%
      max-width: 100%
      width: 100%
      position: relative

  ul.menu
    width: 230px
    position: absolute
    top: 40px
    left: 40px
    z-index: 10
    li.membrete
      background-image: url('images/sprite.png')
      height: 285px
    li.inicio
      height: 130px
      a
        font-size: 60px
        line-height: 60px
    li.que
    li.como
      height: 60px
      a
        font-size: 28px

    li.contact
    li.tips
      height: 74px
      a
        font-size: 48px
  div.container
    height: 100%
    width:580px 
    position: absolute
    left: 50.7%
    top: 0px
    overflow-y: visible
    overflow-x: hidden

    div.page
      top: 50%
      background-size: 100%
      text-indent: -99999px
      width:580px 
      position: relative
      height: 688px
      margin-top: -345px
      &.closed
        display: none
      &.inicio
        height: 560px
        background-image: url('images/inicio-back.png')
        margin-top: -280px
      &.quees
        background-image: url('images/quees-back.png')
      &.como
        background-image: url('images/como-back.png')
      &.tips
        height: 3400px
        background-image: url('images/ecotips-back.png')
        margin-top: 0px
        top: 0px
      &.contact
        text-indent: 0px
        background-image: url('images/contact-back.png')
        h1
          font-size: 17px
          font-weight: bold
          color: #565327
          width: 500px
          margin: 0 auto
          padding: 50px 0 0
        form
          width: 80%
          margin: 20px auto 0px
          .field-container input[type=text]
          .field-container input[type=email]
            margin: 10px auto
            width:100%
            &.consulta
              height: 150px
          a.enviar
            font-weight: bold
            font-size: 30px
            color:#565327
            float: right
