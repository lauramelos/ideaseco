@import 'node_modules/nib'
@import 'deps/clean.styl'

/* component styles */
@import 'javascript/build/build.css'

/* absolut url srcs */
$host = "http://------definir.un.host-----/"

/* wrap dimmension */
$wrap_width = 960px

/* Layout */
$mainbar_height = 72px
$nav_hight = 120px

/* MOBILE Layout */
$mob_mainbar_height = 80px
$mob_nav_hight = 75px
$body_top = $mob_mainbar_height + $mob_nav_hight;
$body_content_port = 480 - $body_top

/* commons */
@import 'commons/colors.styl'
@import 'commons/fonts.styl'
@import 'commons/buttons.styl'

/* blocks */
@import 'footer.styl'
//@import 'header.styl'

*
  box-sizing: border-box
  *behavior: url( $host + 'css/boxsizing.htc')
  outline: none

body
  font-family: $main-font
  background-color: black
  color: $color-font
  overflow: hidden
  a
    color: $grey-light
    text-decoration: none
  h1

    color: $color-font
    font-size: 20px

  div.back
    img
      display: block
      height: auto
      max-height: 100%
      max-width: 100%
      width: 100%
      position: relative

  ul.menu
    width: 280px
    position: absolute
    top: 40px
    left: 40px
    z-index: 10
    li
      background-image: url('images/menu-sprite.png')
      text-indent: -9999px
      a
        display: block
        width: 100%
        height: 100%
      &.membrete
        height: 310px
      &.inicio
        height: 147px
        background-position: 0 -310px
        &.current
        &:hover
          background-position: 279px -310px
      &.que
        height: 65px
        background-position: 0 -456px
        &.current
        &:hover
          background-position: 279px -456px
      &.como
        height: 51px
        background-position: 0 -521px
        &.current
        &:hover
          background-position: 279px -521px
      &.contact
        background-position: 0 -571px
        height: 81px
        &.current
        &:hover
          background-position: 279px -573px
      &.tips
        background-position: 0 -652px 
        height: 85px
        &.current
        &:hover
          background-position: 279px -652px

  div.container
    height: 100%
    position: absolute
    left: 50.7%
    top: 0px
    overflow-y: visible
    overflow-x: hidden

    div.page
      top: 50%
      /*text-indent: -99999px*/
      width:580px 
      position: relative
      height: 680px
      margin-top: -345px
      ul
        background-image: url('images/bg-pix.png')
        background-repeat: repeat
        position: relative
        padding: 20px 0
        h1
          margin: 0 auto
          font-weight: bold
          font-size: 22px
          width: 300px
          &:before
            height: 37px
            width: 37px
            background-image: url('images/sprite.png')
            content: " "
            position: absolute
            top: 20px
            left: 50px
        li
          position: relative
          width: 350px
          margin: 0 auto
        p
          width: 350px
          margin: 25px auto
          line-height: 20px
          text-align: center
      &.inicio
        li.inicio
          background-image: url('images/inicio.png')
          height: 400px
          width: 300px
          margin: 30px auto
      &.quees
        /*background-image: url('images/quees-back.png')*/
      &.como
        /*background-image: url('images/como-back.png')*/
        ul
          p
            background-image: url('images/recuadro.png')
            height: 145px
            width: 400px
            padding: 35px
          li
            padding: 20px 0px
            &:before
              height: 22px
              width: 22px
              background-image: url('images/sprite.png')
              content: " "
              position: absolute
              top: 20px
              left: -34px
              background-position: 0 -38px
            height: 60px
            line-height: 22px

      &.tips
        height: 3400px
        background-image: url('images/ecotips-back.png')
        margin-top: 0px
        top: 0px
      &.contact
        text-indent: 0px
        background-image: url('images/contact-back.png')
        h1
          font-size: 17px
          font-weight: bold
          width: 500px
          margin: 0 auto
          padding: 50px 0 0
        form
          width: 80%
          margin: 20px auto 0px
          textarea
          .field-container input[type=text]
          .field-container input[type=email]
            border: 0 none
            margin: 10px auto
            width:100%
          textarea.consulta
              height: 150px
          a.enviar
            font-weight: bold
            font-size: 30px
            color:#565327
            float: right

@media only screen and (max-height : 800px)
  body
    div.container
      left: 50.7%
      div.page
        top: 50%
        text-indent: -99999px
        width:420px 
        &.inicio
          height: 459px
          background-image: url('images/inicio-back2.png')
          margin-top: -230px
        &.quees
          background-image: url('images/quees-back2.png')
          height: 494px
          margin-top: -245px
        &.como
          background-image: url('images/como-back2.png')
          height: 481px
          margin-top: -240px
        &.tips
          height: 2562px
          background-image: url('images/ecotips-back2.png')
          margin-top: 0px
          top: 0px
        &.contact
          height: 498px
          margin-top: -249px
          text-indent: 0px
          background-image: url('images/contact-back2.png')
          h1
            font-size: 11px
            width: 402px
            padding: 20px 0 0
          form
            width: 80%
            margin: 20px auto 0px
            textarea
            .field-container input[type=text]
            .field-container input[type=email]
              border: 0 none
            textarea.consulta
                height: 130px
            a.enviar
              font-size: 24px


    ul.menu
      $h = 1.2727272727
      width: (280 / $h)px
      li
        background-image: url('images/menu-sprite2.png')
        &.membrete
          height: (310 / $h)px
        &.inicio
          height: (145 / $h)px
          background-position: 0px -245px
          &.current
          &:hover
            background-position: 219px -245px
        &.que
          height: (65 / $h)px
          background-position: 0 -358px
          &.current
          &:hover
            background-position: 219px -358px
        &.como
          height: (51 / $h)px
          background-position: 0 -410px
          &.current
          &:hover
            background-position: 219px -410px
        &.contact
          background-position: 0 -451px
          height: (81 / $h)px
          &.current
          &:hover
            background-position: 219px -451px
        &.tips
          background-position: 0 -512px
          height: (85 / $h)px
          &.current
          &:hover
            background-position: 219px -512px


