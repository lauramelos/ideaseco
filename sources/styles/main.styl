@import 'node_modules/nib'
@import 'deps/clean.styl'

/* component styles */
@import 'javascript/build/build.css'

/* absolut url srcs */
$host = "http://------definir.un.host-----/"

/* wrap dimmension */
$wrap_width = 960px

/* Layout */
$mainbar_height = 72px
$nav_hight = 120px

/* MOBILE Layout */
$mob_mainbar_height = 80px
$mob_nav_hight = 75px
$body_top = $mob_mainbar_height + $mob_nav_hight;
$body_content_port = 480 - $body_top

/* commons */
@import 'commons/colors.styl'
@import 'commons/fonts.styl'
@import 'commons/buttons.styl'

/* blocks */
@import 'footer.styl'
//@import 'header.styl'

*
  box-sizing: border-box
  *behavior: url( $host + 'css/boxsizing.htc')
  outline: none
  html
    height: 100px
body
  font-family: $main-font
  background-color: black
  color: $color-font
  overflow: hidden
  height: 100%
  a
    color: $grey-light
    text-decoration: none
    font-family: $p-fonts
  h1
    color: $color-font
    font-size: 16px
    font-family: $p-fonts
    font-weight: bold
    width: 80%
  p
  label
    font-size: 16px
    line-height: 20px
    font-family: $p-fonts
    width: 80%
  b
  i
    font-weight: bold
  i
    color: green

  div.back
    position: fixed
    top: -50%
    left: -50%
    width: 200%
    height: 200%
    img
      position: absolute
      top: 0
      bottom: 0
      left: 0
      right: 0
      max-height: 50%
      margin: auto

  a.ingresar
    height: 300px
    width: 204px
    background-image: url('images/sprite3.png')
    position: absolute
    top: 50%
    margin-top: -150px
    margin-left: -102px
    left: 50%

  ul.menu
    width: 280px
    position: absolute
    top: 20px
    left: 40px
    z-index: 10
    li
      background-image: url('images/menu-sprite.png')
      text-indent: -9999px
      a
        display: block
        width: 100%
        height: 100%
      &.membrete
        height: 310px
      &.inicio
        height: 147px
        background-position: 0 -310px
        &.current
        &:hover
          background-position: 279px -310px
      &.que
        height: 65px
        background-position: 0 -456px
        &.current
        &:hover
          background-position: 279px -456px
      &.como
        height: 51px
        background-position: 0 -521px
        &.current
        &:hover
          background-position: 279px -521px
      &.contact
        background-position: 0 -571px
        height: 81px
        &.current
        &:hover
          background-position: 279px -573px
      &.tips
        background-position: 0 -652px 
        height: 85px
        &.current
        &:hover
          background-position: 279px -652px

  .fb_edge_widget_with_comment
    position: absolute
    bottom: -48px
    left: 10px

  .box .antiscroll-inner
  .box
    height: 100%
    width: 100%

  div.container
    background-image: url('images/bg-pix.png')
    background-repeat: repeat
    position: absolute
    left: 50.5%
    top: 10%
    overflow: hidden
    height: 80%
    width: 30%
    min-width: 450px

    div.page
      position: relative
      height: 100%
      ul
        position: relative
        padding: 7% 0
        h1
          margin: 0px auto
        &.enhanced
          width: 100%
          h1
            width: 66%
            margin: 2% auto
          &:before
            height: 37px
            width: 36px
            background-image: url('images/sprite.png')
            content: " "
            position: absolute
            left: 6%
        &:first-child
          padding: 8% 0px 1px
        li
          position: relative
          width: 76%
          margin: 0 auto
        p
          width: 100%
          margin: 5% auto
          text-align: center
          &.nom
            margin: 0px auto 25px
        p.enhanced
          width: 70%
          border: 2px solid #96ba20
          padding: 10px
          font-family: $big-p-fonts
          font-weight: bold
          font-size: 14px

      &.inicio
        ul
          li.inicio
            background-image: url('images/inicio.png')
            height: 460px
            width: 300px
            margin: 30px auto
          p.enhanced
            font-size: 16px
      &.quees
        h1
          text-align: center
        /*background-image: url('images/quees-back.png')*/
      &.como
        /*background-image: url('images/como-back.png')*/
        ul
          li
            padding: 20px 0px
            &:before
              height: 18px
              width: 18px
              background-image: url('images/sprite.png')
              content: " "
              position: absolute
              top: 24px
              left: -34px
              background-position: 0 -38px
            height: 60px
            line-height: 22px
            p
              margin: 0px
              line-height: auto
              text-align: left
          p.enhanced
            font-weight: bold

      &.tips
        margin-top: 0px
        top: 0px
        ul
          h1
            width: 330px
          li.text
            p
              background-color: #faf0d4
              width: 50%
              position: absolute
              top: 20px
              left: -20px
              border: 2px solid #96ba20
              padding: 10px
              margin: 0px
            width: 430px
            &.p1
              background-image: url('images/ecotips11.png')
              height: 538px
            &.p2
              background-image: url('images/ecotips12.png')
              height: 660px
            &.p3
              background-image: url('images/ecotips13.png')
              height: 574px
              div.botas
                background-image: url('images/sprite2.png')
                width: 89px
                height: 144px
                position: absolute
                right: -25px
                top: 100px
            &.p4
              background-image: url('images/ecotips14.png')
              height: 636px
            &.p5
              background-image: url('images/ecotips15.png')
              height: 430px
          p.enhanced
            width: 72%
            font-weight: 700
            margin: 60px auto
            position: relative
            padding-bottom: 60px
            &:after
              height: 37px
              width: 36px
              background-image: url('images/sprite.png')
              content: " "
              position: absolute
              bottom: 20px
              left: 50%
              margin-left: -16px
          &.enhanced
            &:before
              background-position: 0px -38px
              height: 18px
              width: 18px
            p
              margin: 0 auto
              text-align: left

      &.contact
        ul
          padding-bottom: 1%
          p.thanks
            padding: 200px 0
          h1
            padding: 2% 0 1%
          form
            font-size: 12px
            padding: 12px 0px
            width: 80%
            margin: 0px auto
            p
              line-height: 16px
              text-align: left
              margin: 0px
              width: 100%
              label
                display: block
              input
              textarea
                border: 0 none
                margin: 0px auto 2.75%
                width:100%
                height: 20px
              textarea
                height: 149px
            input[type=submit]
              font-weight: bold
              font-size: 20px
              color:#565327
              display: block
              float: right
              font-size: 30px
              background-color: transparent
              border: 0px
              cursor: pointer
              padding: 0px
              font-family: $h1-fonts
        ul.links
          padding: 0px
          position: absolute
          bottom: 0px
          width: 100%
          .fb_edge_widget_with_comment
            bottom: auto
            top: -55px
            left: 50px
          a
            font-weight: bold
            font-size: 20px
            color:#565327
            display: block
            line-height: 25px
          &:after
            content: " "
            background-image: url('images/sprite.png')
            height: 59px
            width: 80px
            position: absolute
            bottom: 30px
            left: 50px
            background-position: -36px 0px
        div.footer
          background-image: url('images/contact-back.png')
          height: 46px

@media only screen and (max-height : 800px)
  body

    h1
      font-size: 12px
    p
    label
      font-size: 12px
      line-height: 16px

    div.container
      div.page
        ul
        &.inicio
          ul li.inicio
            background-image: url('images/inicio2.png')
            height: 370px
            width: 240px
            margin: 10px auto
        &.quees
          /**/
        &.como
          /**/
          ul 
            li
              height: 45px
              width: 260px
            li:before
              left: -25px
        &.tips
          ul
            li.text
              width: 310px
              &.p1
                background-image: url('images/ecotips21.png')
                height: 388px
              &.p2
                background-image: url('images/ecotips22.png')
                height: 476px
              &.p3
                background-image: url('images/ecotips23.png')
                height: 413px
                div.botas
                  top: 100px
                  right: -25px
              &.p4
                background-image: url('images/ecotips24.png')
                height: 458px
              &.p5
                background-image: url('images/ecotips25.png')
                height: 310px

        &.contact
          ul
            h1
              width: 80%
              padding: 20px 0 0
            form
              p
                input
                textarea
                  margin: 0px auto 1%
                .field-container input[type=text]
                .field-container input[type=email]
                  border: 0 none
                  margin: 0px auto 1%
                textarea.consulta
                    height: 130px
                a.enviar
                  font-size: 24px
          ul.links
            .fb_edge_widget_with_comment
              bottom: auto
              top: -30px
              left: 10px
            a
              font-size: 16px
              line-height: 23px
              margin-left: 106px
              &.mail
                margin-bottom: 20px
            &:after
              left: 15px
              bottom: 50px

    ul.menu
      top: 10px
      $h = 1.2727272727
      width: (280 / $h)px
      li
        background-image: url('images/menu-sprite2.png')
        &.membrete
          height: (310 / $h)px
        &.inicio
          height: (145 / $h)px
          background-position: 0px -245px
          &.current
          &:hover
            background-position: 219px -245px
        &.que
          height: (65 / $h)px
          background-position: 0 -358px
          &.current
          &:hover
            background-position: 219px -358px
        &.como
          height: (51 / $h)px
          background-position: 0 -410px
          &.current
          &:hover
            background-position: 219px -410px
        &.contact
          background-position: 0 -451px
          height: (81 / $h)px
          &.current
          &:hover
            background-position: 219px -451px
        &.tips
          background-position: 0 -512px
          height: (85 / $h)px
          &.current
          &:hover
            background-position: 219px -512px


